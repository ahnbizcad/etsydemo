<h2>Log in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class: "form-horizontal") do |f| %>
  <div class="form-group">
  	<%= f.label :email, class: "control-label col-md-2" %>:	
  	<%= f.email_field :email, placeholder: "Email", class: "form-control col-md-10" %>
  </div>

  <div class="form-group">
  	<%= f.label :password, class: "control-label col-md-2" %>: 
  	<%= f.password_field :password, class: "form-control col-md-10" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
    	<%= f.check_box :remember_me %> 
    	<%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="form-group">
  	<%= f.submit "Log In", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
