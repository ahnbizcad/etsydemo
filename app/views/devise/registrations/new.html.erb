<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, 
											 :url => registration_path(resource_name), 
											 :html => { class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <%# Handle non unique username errors as alerts, instead of broken page %>
  <div class="form-group">
    <%= f.label :username, class: "control-label col-sm-2" %>
    <div class="col-sm-6">
      <%= f.text_field :username, :autofocus => true, class: "form-control col-sm-6" %>
    </div>
  </div>

	<div class="form-group">
		<%= f.label :email, class: "control-label col-sm-2" %>
  	<div class="col-sm-6">
  		<%= f.email_field :email, placeholder: "Email", class: "form-control col-sm-6" %>
  	</div>
  </div>

  <div class="form-group">
  	<%= f.label :password, class: "control-label col-sm-2" %>
  	<div class="col-sm-6">
  		<%= f.password_field :password, class: "form-control" %>
  	</div>
  </div>

  <div class="form-group">
  	<%= f.label "Confirm Password", class: "control-label col-sm-2" %>	
  	<div class="col-sm-6">
  		<%= f.password_field :password_confirmation, class: "form-control" %>
  	</div>
  </div>

<div class="row">	
	<div class="col-sm-offset-2 col-sm-2">
		<%= f.submit "Sign Up", class: "btn btn-primary" %>
	</div>
  <div class="col-sm-6">
    <%= render "devise/shared/links" %>
  </div>
</div>

<% end %>


