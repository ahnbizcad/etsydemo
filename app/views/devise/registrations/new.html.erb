<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: "horizontal-form") do |f| %>
  <%= devise_error_messages! %>

	<div class="form-group">
  	<%= f.label :email %><br />
  	<%= f.email_field :email, :autofocus => true, placeholder: "Email", class: "form-control col-md-10" %>
  </div>

  <div class="form-group">
  	<%= f.label :password %><br />
  	<%= f.password_field :password, class: "form-control col-md-10" %>
  </div>

  <div class="form-group">
  	<%= f.label :password_confirmation %><br />
  	<%= f.password_field :password_confirmation, class: "form-control col-md-10" %>
  </div>

  <div>
  	<%= f.submit "Sign Up", class: "btn btn-primary" %>
  </div>
<% end %>
<br>
<%#= render "devise/shared/links" %>
